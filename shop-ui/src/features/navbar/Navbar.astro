---
import NavbarCartButton from "./NavbarCartButton.vue"
import NavbarDrawer from "./NavbarDrawer.vue"
import NavbarDrawerButton from "./NavbarDrawerButton.vue"
---


<header transition:persist transition:animate="none" class="fixed top-0 inset-0 w-full z-40 h-14 bg-zinc-900 px-4 flex items-center justify-between">
  <a href="/" class="flex items-center justify-center text-rose-500 text-3xl font-medium">Kuroabyss</a>
  <ul class="flex items-center gap-2">
    <li>
      <NavbarCartButton client:load transition:persist="navbar-cart-button">
      </NavbarCartButton>
    </li>
    <li>
      <NavbarDrawerButton client:load></NavbarDrawerButton>
    </li>
  </ul>
</header>

<NavbarDrawer client:load transition:persist transition:animate="none"></NavbarDrawer>